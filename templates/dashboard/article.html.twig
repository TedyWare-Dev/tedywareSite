{% extends "projectPannel.html.twig" %}
{% block body %}
<article class="addArticle">
    <h1>Article du Blog</h1>
    <a href="{{ path('create_article') }}" class="btn btn-primary add">Ajouter un Article</a>
    <table class="table table-striped table-hover table-borderless">
        <thead>
            <tr>
                <th scope="col">Identifiant</th>
                <th scope="col">Title</th>
                <th scope="col">Auteur</th>
                <th scope="col">Catégorie</th>
                <th scope="col">Date de Création</th>
            </tr>
        </thead>
        <tbody>
            {% for articles in articles %}
            <tr>
                <td>{{articles.id}}</td>
                <td>{{articles.title}}</td>
                <td>{{articles.author}}</td>
                <td>{{articles.category}}</td>
                <td>{{articles.createdAt | date('d/m/Y')}}</td>
                <td>
                    <a href="{{ path('edit_article', {'id': articles.id}) }}" class="btn btn-warning">Modifier</a>
                    <a href="{{ path('delete_article', {'id': articles.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</article>
{% endblock %}
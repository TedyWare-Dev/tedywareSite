{% extends "projectPannel.html.twig" %}
{% block body %}
<article class="addJobs">
    <h1>Jobs</h1>
    <a href="{{ path('create_jobs') }}" class="btn btn-primary add">Ajouter un jobs</a>
    <table class="table table-striped table-hover table-borderless">
        <thead>
            <tr>
                <th scope="col">Identifiant</th>
                <th scope="col">Title</th>
                <th scope="col">Auteur</th>
                <th scope="col">Catégorie</th>
                <th scope="col">Date de Création</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for jobs in jobs %}
            <tr>
                <td>{{jobs.id}}</td>
                <td>{{jobs.title}}</td>
                <td>{{jobs.contract}}</td>
                <td>{{jobs.technologie}}</td>
                <td>{{jobs.createdAt | date('d/m/Y')}}</td>
                <td>
                    <a href="{{ path('edit_jobs', {'id': jobs.id}) }}" class="btn btn-warning">Modifier</a>
                    <a href="{{ path('delete_jobs', {'id': jobs.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</article>
{% endblock %}
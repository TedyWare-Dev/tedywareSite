{% extends "projectPannel.html.twig" %}
{% block body %}
<article class="addProject">
    <h1>{{page_name}}</h1>
     <a href="{{ path('create_projects') }}" class="btn btn-primary add">Ajouter un projet
         termin√©</a>
     <table class="table table-striped table-hover table-borderless">
         <thead>
             <tr>
                 <th scope="col">Identifiant</th>
                 <th scope="col">Nom</th>
                 <th scope="col">Type</th>
                 <th scope="col">Image</th>
                 <th scope="col">Date de fin</th>
             </tr>
         </thead>
         <tbody>
             {% for projects in projects %}
             <tr>
                 <td>{{project.id}}</td>
                 <td>{{project.name}}</td>
                 <td>{{project.type}}</td>
                 <td>{{project.picture}}</td>
                 <td>{{project.completionDate}}</td>
                 <td>
                     <a href="{{ path('edit_projects', {'id': project.id}) }}" class="btn btn-danger">Modifier</a>
                     <a href="{{ path('delete_projects', {'id': project.id}) }}" class="btn btn-danger">Supprimer</a>
                 </td>
             </tr>
             {% endfor %}
         </tbody>
     </table>

</article>
{% endblock  %}
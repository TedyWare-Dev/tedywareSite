{% extends "projectPannel.html.twig" %}
{% block body %}
<article class="addUser">
    <h1>Utilisateurs</h1>
    <a href="{{ path('create_user') }}" class="btn btn-primary add">Ajouter un utilisateur</a>
    <table class="table table-striped table-hover table-borderless">
        <thead>
            <tr>
                <th scope="col">Identifiant</th>
                <th scope="col">Email</th>
                <th scope="col">Pseudo</th>
                <th scope="col">Role</th>
                <th scope="col">Date de cr√©ation</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for user in user %}
            <tr>
                <td>{{user.id}}</td>
                <td>{{user.email}}</td>
                <td>{{user.username}}</td>
                <td>{{user.role}}</td>
                <td>{{user.registrationDate | date('d/m/Y')}}</td>
                <td>
                    <a href="{{ path('edit_user', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
                    <a href="{{ path('delete_user', {'id': user.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</article>
{% endblock %}
{% extends "projectPannel.html.twig" %}
{% block body %}
<article class="register">

    <h1>Inscription</h1>
    {% for flashMessage in app.session.flashbag.get('notice') %}

    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ flashMessage }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    {% endfor %}

    <div class="containerGrid">

        <div class="gridRows">
            {{form_start(formUser)}}
            {{form_row(formUser.username, {'label' : 'Nom d\'utilisateur '})}}
            {{form_row(formUser.name, {'label' : 'Pr√©nom '})}}
            {{form_row(formUser.email, {'label' : 'Adresse email'})}}
            {{form_row(formUser.picture, {'label' : 'URL de l\'image'})}}
        </div>
        <div class="gridRows">
            {{form_row(formUser.password, {'label' : 'Mot de passe'})}}
            {{form_row(formUser.confirm_password, {'label' : 'Comfirmez le mot de passe'})}}
            {{form_row(formUser.role, {})}}
        </div>
        <div class="gridRows">
            {{form_row(formUser.projects, {})}}
        </div>
        <div class="gridRows">
            {{form_row(formUser.website, {})}}
            {{form_row(formUser.facebook, {})}}
            {{form_row(formUser.twitter, {})}}
        </div>
        <div class="gridRows">
            {{form_row(formUser.registrationDate, {})}}
            <button class="btn btn-success" type="submit">Ajouter un Utilisateur</button>
            <a href="{{ path('dashboard_user') }}" class="btn btn-primary">Voir tous les Utilisateurs</a>
            {{form_end(formUser)}}
        </div>
     
    </div>


</article>
{% endblock %}
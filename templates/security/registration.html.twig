{% extends "projectPannel.html.twig" %}
{% block body %}
<article class="register">
    <div class="container">
        <h1>Inscription</h1>
        {% for flashMessage in app.session.flashbag.get('notice') %}

        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ flashMessage }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        {% endfor %}
        {{form_start(formUser)}}
        {{form_row(formUser.username, {'label' : 'Nom d\'utilisateur '})}}
        {{form_row(formUser.email, {'label' : 'Adresse email'})}}
        {{form_row(formUser.password, {'label' : 'Mot de passe'})}}
        {{form_row(formUser.confirm_password, {'label' : 'Comfirmez le mot de passe'})}}
        {{form_row(formUser.role, {})}}
        <button class="btn btn-success" type="submit">Ajouter un Utilisateur</button>
        <a href="{{ path('dashboard_user') }}" class="btn btn-primary">Voir tous les Utilisateurs</a>
        {{form_end(formUser)}}
    </div>
</article>
{% endblock %}
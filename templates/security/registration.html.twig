{% extends "base.html.twig" %}
{% block body %}
<div class="container">
    <h1>Inscription</h1>
    {% for flashMessage in app.session.flashbag.get('notice') %}

    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ flashMessage }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    {% endfor %}
    {{form_start(form)}}
    {{form_row(form.username, {'label' : 'Nom d\'utilisateur '})}}
    {{form_row(form.email, {'label' : 'Adresse email'})}}
    {{form_row(form.password, {'label' : 'Mot de passe'})}}
    {{form_row(form.confirm_password, {'label' : 'Comfirmez le mot de passe'})}}
    <button class="btn btn-success" type="submit">Ajouter un Utilisateur</button>
    {{form_end(form)}}
</div>
{% endblock %}
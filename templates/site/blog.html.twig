{% extends "base.html.twig" %}



{% block body %}
<style>
  
    body, html{
        background-color: #1e2334;
    }
    h1{
        color: #2a3455;
    }
</style>
<div class="blog d-flex flex-direction-row flex-wrap container">
    <h1 class="title">Nos dernieres <span class="yellow"> actus</span></h1>
    {% for article in articles %}
    <div class="mg-auto card actu">
        <img class="card-img-top" src="{{ article.pictureArticle }}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{ article.title }}</h5>
            <p class="card-text">{{ article.paragraphe | u.truncate(150, '...') | raw}}</p>
            <button href="" class="btn-mg-bottom btn btn-warning">Lire la suite</button>

            <hr>
            <p class="card-text"><small class="text-muted">{{ article.createdAt | date('d/m/Y')  }} dans la cat√©gorie
                    <span class="yellow">{{ article.category.title }}</span> </small></p>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock body %}
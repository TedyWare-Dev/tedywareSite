{% extends 'base.html.twig' %}

{% block body %}
<article class="contact">
    {{  form_start(formContact) }}
    <div class="containerContactForm">
        <h1>Nous contacter</h1>
        <table class="table">
            <tr>
                <td>{{form_row(formContact.name, {})}}</td>
                <td>{{form_row(formContact.contactType, {})}}</td>
            </tr>
            <tr>
                <td>{{form_row(formContact.mail, {})}}</td>
                <td>{{form_row(formContact.phone, {})}}</td>
            </tr>
        </table>
        {{form_row(formContact.message, {})}}





        <button type="submit" class="btn-border">Envoyer</button>
    </div>
    {{  form_end(formContact) }}
</article>
{% endblock body %}